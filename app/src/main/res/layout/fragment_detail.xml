<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Package.Fragment_detail"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:title="Chi tiết sản phẩm"
        android:background="#3366FF"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/asus" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/sp"
            android:text="ASUS"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/sp"
            android:text="Giá:  14000000"
            android:textColor="#FF0000"
            android:textSize="20dp" />
        <Button
            android:id="@+id/add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:layout_toRightOf="@+id/sp"
            android:text="+"
            android:textAlignment="center"
            android:layout_below="@id/tv4"
            android:layout_marginTop="5dp"
            android:textSize="25dp"
            android:textColor="#000"

            android:layout_marginStart="160dp"/>

        <EditText
            android:id="@+id/tv5"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv4"
            android:layout_marginStart="70dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/sp"
            android:gravity="center"
            android:text="1" />
        <Button
            android:id="@+id/tru"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="25dp"
            android:textColor="#000"
            android:background="@drawable/button"
            android:layout_toRightOf="@+id/sp"
            android:layout_below="@id/tv4"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/bttake"
        android:layout_width="120dp"
        android:scaleType="fitCenter"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:text="take" />

    <EditText
        android:id="@+id/gioithieu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sp"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:hint="Chi tiet" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shopping" />

</LinearLayout>